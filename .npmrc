# Always use exact versions from package-lock.json
package-lock=true

# Allow installation even if engine field mismatches (prevents EAS engine errors)
engine-strict=false

# Prefer offline caching for faster builds
prefer-offline=true
progress=false

# Ensure consistent Node version in EAS environment
node-version=20.19.0
npm-version=10.8.2

# Prevent permission issues during CI builds
unsafe-perm=true

# Disable audit and funding messages during CI builds
audit=false
fund=false
